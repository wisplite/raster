{
    "go.useLanguageServer": true,
    "go.formatTool": "goimports",
    "go.lintOnSave": "package",
    "go.vetOnSave": "package",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "never",
        "source.fixAll": "never"
    },
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "never",
            "source.fixAll": "never"
        }
    },
    "go.buildOnSave": "off",
    "go.lintTool": "golint",
    "go.toolsManagement.autoUpdate": true
}